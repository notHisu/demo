<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:ex="clr-namespace:Xamarin.Forms.Clinical6.UI.MarkupExtensions"
                  xmlns:local="clr-namespace:Xamarin.Forms.Clinical6.Views;assembly=MAUI.Clinical6"
                  x:Class="Xamarin.Forms.Clinical6.Views.DashboardMasterPage"
                  IconImageSource="menuIcon"
                  FlowDirection="RightToLeft">

    <!-- Flyout menu: just a ContentPage -->
    <FlyoutPage.Flyout>
        <local:MenuPage />
    </FlyoutPage.Flyout>

    <!-- Detail page: wrap in NavigationPage for navigation -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:DashboardTabPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>