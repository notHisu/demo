<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="Xamarin.Forms.Clinical6.UI.Controls.CustomNavigationBar"
      BackgroundColor="White" RowSpacing="0"
      Margin="0">
    <Grid.RowDefinitions>
        <RowDefinition Height="59" />
        <RowDefinition Height="1" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <Label x:Name="_titleLabel" Grid.ColumnSpan="2" TextColor="#9B9B9B" FontSize="18" MaxLines="1" Margin="0"
           FontAttributes="Bold" HorizontalOptions="FillAndExpand" VerticalOptions="Center" BackgroundColor="Transparent"
           HorizontalTextAlignment="Center" VerticalTextAlignment="Center" LineBreakMode="TailTruncation"/>

    <Button x:Name="_button" TextColor="{StaticResource NavigationColorBackItem}" FontSize="18" BackgroundColor="White"
            Margin="8,0" VerticalOptions="Center" HorizontalOptions="Start" ImageSource="nav_arrow_back"/>

    <BoxView Grid.Row="1" Grid.ColumnSpan="2" VerticalOptions="Start" HorizontalOptions="FillAndExpand"
             Margin="0" HeightRequest="1" BackgroundColor="#D9D9D9"/>
</Grid>
